    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:padding="@dimen/_15dp">
            <solid android:color="@color/white"/>
            <padding android:top="@dimen/_15dp"
                android:bottom="@dimen/_15dp"
                android:left="@dimen/_1dp"
                android:right="@dimen/_1dp"/>
            <stroke android:color="@color/apple" android:width="@dimen/_0.3dp"/>
        </shape>
    </item>
</selector>