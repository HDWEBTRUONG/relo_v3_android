<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_toolbar</item>
        <item name="colorPrimaryDark">@color/bg_toolbar</item>
        <item name="colorAccent">@color/bg_toolbar</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textColor">@color/colorText</item>
        <!--<item name="android:popupBackground">@style/popup_menu</item>-->
    </style>

    <style
        name="dialog_animation" >
        <item name="android:windowEnterAnimation">@anim/slide_enter_bottom_top</item>
        <item name="android:windowExitAnimation">@anim/slide_exit_top_bottom</item>
    </style>

    <style name="popup_menu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/colorConcrete</item>
        <item name="android:background">@color/colorConcrete</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="TabTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>