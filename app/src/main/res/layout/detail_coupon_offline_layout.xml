<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:background="@color/oceanBlue"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_offline_title_page1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_offline_title_page2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxlarge" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_offline_date"
                android:layout_margin="@dimen/_5dp"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textColor="@color/color_hint_text_170"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_offline_note"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/color_hint_text_170"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_150dp"
                android:layout_marginLeft="@dimen/_80dp"
                android:layout_marginRight="@dimen/_80dp"
                android:src="@drawable/iv_demo_card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_detail_off"
                android:padding="@dimen/_5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coupon name/ en"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:text="html tag"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:text="[注意事項]"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:text="html tag"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_offline_copyright"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/color_hint_text_170"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>